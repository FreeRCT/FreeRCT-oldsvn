<rcdfiles>
	<!-- Snack shop -->
	<file target="shops.rcd" magic="RCDF" version="1">
		<gameblock magic="SHOP" version="3">
			<field name="width"  value="64"/>
			<field name="height" value="16"/>
			<sheet x-base="0" y-base="0" x-step="64" y-step="64"
			       fname="../sprites_src/objects/1x1/template8bpp64.png"
			       names="se, sw, nw, ne"
			       x-offset="-32" y-offset="-33" width="64" height="64" />
			<field name="recolouring1">
				<bitfield name="orig"><field value="invalid"/></bitfield>
				<bitfield name="replace"/>
			</field>
			<field name="recolouring2">
				<bitfield name="orig"><field value="invalid"/></bitfield>
				<bitfield name="replace"/>
			</field>
			<field name="recolouring3">
				<bitfield name="orig"><field value="invalid"/></bitfield>
				<bitfield name="replace"/>
			</field>
			<texts name="texts">
				<string name="name" lang="">Snack shop</string>
				<string name="description" lang="">Shop where you can buy good cookies</string>
				<string name="description" lang="nl_NL">Winkel waar je lekkere koekjes kunt kopen</string>
			</texts>
		</gameblock>
	</file>
</rcdfiles>

